RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/account/index\.php$
RewriteRule ^u/([^/]+)/?$ /account/index.php?u=$1 [L,QSA]
RewriteCond %{REQUEST_URI} !^/uploads/index\.php$
RewriteRule ^uploads/([^/]+)/([^/]+)/([^/]+)\.([^/]+)$ /uploads/?type=$1&UN=$2&ID=$3&EXT=$4 [L]
RewriteRule ^webstories/([^/]+)$ /showStories/?url=$1 [L]
RewriteRule ^webstories/([^/]+)/$ /showStories/?url=$1 [L]
RewriteRule ^webstories/([^/]+)\.([^/]+)$ /showStories/?url=$1 [L]
RewriteRule ^webstories/([^/]+)/([^/]+)$ /showStories/?url=$1&username=$2 [L]
RewriteRule ^sitemap_main.xml$ /sitemap/index.php [L]
RewriteRule ^sitemap_webstories.xml$ /sitemap/stories.php [L]
RewriteRule ^sitemap_authors.xml$ /sitemap/authors.php [L]
